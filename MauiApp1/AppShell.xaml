<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiApp1">

    <FlyoutItem Title="Inicio" Icon="monday.png">
        <ShellContent ContentTemplate="{DataTemplate local:InicioPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Suiza" Icon="tuesday.png">
        <ShellContent ContentTemplate="{DataTemplate local:SuizaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="China" Icon="wednesday.png">
        <ShellContent ContentTemplate="{DataTemplate local:ChinaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Canada" Icon="thursday.png">
        <ShellContent ContentTemplate="{DataTemplate local:CanadaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Tailandia" Icon="friday.png">
        <ShellContent ContentTemplate="{DataTemplate local:TailandiaPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Mexico" Icon="saturday.png">
        <ShellContent ContentTemplate="{DataTemplate local:MexicoPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Corea" Icon="sunday.png">
        <ShellContent ContentTemplate="{DataTemplate local:CoreaPage}" />
    </FlyoutItem>

</Shell>
